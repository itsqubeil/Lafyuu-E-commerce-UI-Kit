                        android:src="@drawable/tasmevvh" />


                    <TextView
                        android:id="@+id/tastex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="left"
                        android:text="FS - QUILTED MAXI CROS..."
                        android:textColor="#223263"

                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tasharga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="left"
                        android:text="$299,43"
                        android:textColor="#40BFFF"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView19"
                            android:layout_width="30sp"
                            android:layout_height="wrap_content"

                            app:srcCompat="@drawable/diskonkuning" />

                        <TextView
                            android:id="@+id/offfftex12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="left"
                            android:paddingLeft="5sp"
                            android:paddingTop="3sp"
                            android:text="24% Off"
                            android:textColor="#FB7181"
                            android:textSize="8sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:background="@drawable/box"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/spatumerah"
                        android:layout_width="120sp"
                        android:layout_height="120sp"

                        android:src="@drawable/merahspatu" />


                    <TextView
                        android:id="@+id/spatmerahgtex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="left"
                        android:text="FS - Nike Air Max 270 React..."
                        android:textColor="#223263"

                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/spatukmerahtexharga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="left"
